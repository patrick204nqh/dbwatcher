          <!-- Navigation -->
          <nav class="flex-1 p-4 space-y-2">
            <%= link_to root_path, 
                class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition-colors #{current_page?(root_path) ? 'sidebar-active' : ''}" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <span x-show="sidebarOpen">Dashboard</span>
            <% end %>
            
            <%= link_to sessions_path, 
                class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition-colors #{current_page?(sessions_path) ? 'sidebar-active' : ''}" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span x-show="sidebarOpen">Sessions</span>
            <% end %>
            
            <%= link_to tables_path, 
                class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition-colors #{current_page?(tables_path) ? 'sidebar-active' : ''}" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <span x-show="sidebarOpen">Tables</span>
            <% end %>
            
            <%= link_to queries_path, 
                class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition-colors #{current_page?(queries_path) ? 'sidebar-active' : ''}" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <span x-show="sidebarOpen">SQL Logs</span>
            <% end %>
          </nav>
          
          <!-- Actions -->
          <div class="p-4 border-t border-gray-800">
            <%= button_to destroy_all_sessions_path, 
                method: :delete,
                data: { confirm: "Are you sure? This will delete all sessions." },
                class: "w-full flex items-center justify-center space-x-2 p-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              <span x-show="sidebarOpen">Clear All Data</span>
            <% end %>
          </div>
        </div>
      </aside>
      
      <!-- Main Content -->
      <main class="flex-1 overflow-hidden">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
