<%# Reusable stats card component %>
<div class="border border-gray-300 rounded bg-white p-3">
  <div class="flex items-center justify-between mb-2">
    <span class="text-xs text-gray-600"><%= label %></span>
    <%= icon_html if defined?(icon_html) && icon_html %>
  </div>
  <div class="text-2xl font-bold <%= value_class || 'text-navy-dark' %>"><%= value %></div>
  <div class="text-xs text-gray-500 mt-1"><%= description %></div>
</div>
