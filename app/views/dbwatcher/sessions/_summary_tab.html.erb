<!-- Summary Content - API-First Implementation -->
<div class="p-4 h-full"
     x-data="summary({ sessionId: '<%= @session.id %>' })">

  <!-- Loading State -->
  <div x-show="loading" class="flex flex-col items-center justify-center h-64">
    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
    <span class="mt-4 text-gray-600 font-medium">Loading summary data...</span>
  </div>

  <!-- Error State -->
  <div x-show="error" class="p-6 bg-red-50 border border-red-200 rounded-lg shadow-sm">
    <div class="flex items-center text-red-700 mb-2">
      <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      <p class="font-medium" x-text="error"></p>
    </div>
    <button @click="loadSummaryData()" class="px-4 py-2 bg-red-100 text-red-700 rounded hover:bg-red-200 transition-colors duration-150">
      Retry Loading
    </button>
  </div>

  <!-- Content when data is loaded -->
  <template x-if="!loading && !error">
    <div class="space-y-6">
      <!-- Session Overview -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-800">Session Overview</h3>
        </div>
        <div class="p-6 grid grid-cols-4 gap-6">
          <div class="space-y-2">
            <div class="text-sm font-medium text-gray-500">Started At</div>
            <div class="text-base font-semibold text-gray-900" x-text="formatStartTime()"></div>
          </div>
          <div class="space-y-2">
            <div class="text-sm font-medium text-gray-500">End Time</div>
            <div class="text-base font-semibold text-gray-900" x-text="formatEndTime()"></div>
          </div>
          <div class="space-y-2">
            <div class="text-sm font-medium text-gray-500">Duration</div>
            <div class="text-base font-semibold text-gray-900" x-text="formatDuration()"></div>
          </div>
          <div class="space-y-2">
            <div class="text-sm font-medium text-gray-500">Status</div>
            <div class="flex items-center">
              <div class="h-2.5 w-2.5 rounded-full mr-2"
                   :class="formatEndTime() === 'Active' ? 'bg-green-500 animate-pulse' : 'bg-blue-500'"></div>
              <span class="text-base font-semibold text-gray-900"
                    x-text="formatEndTime() === 'Active' ? 'Active' : 'Completed'"></span>
            </div>
          </div>
        </div>
      </div>


      <!-- Tables Grid -->
      <div x-show="summaryData.tables_breakdown && summaryData.tables_breakdown.length > 0" class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-800">Table Activity Details</h3>
        </div>
        <div class="p-6 grid grid-cols-4 gap-4">
          <template x-for="table in summaryData.tables_breakdown" :key="table.table_name">
            <div class="bg-gray-50 rounded-lg p-3 hover:shadow-md transition-shadow duration-150 cursor-pointer"
                 @click="window.location.href=`/dbwatcher/sessions/${summaryData.session_id}/changes?table=${table.table_name}`">
              <h4 class="text-sm font-semibold text-gray-800 mb-2 truncate" x-text="table.table_name"></h4>
              <div class="space-y-1.5">
                <template x-for="(count, op) in table.operations" :key="op">
                  <div class="flex justify-between items-center" x-show="count > 0">
                    <span class="badge text-xs px-1.5 py-0.5 rounded"
                          :class="{
                            'bg-green-100 text-green-800': op.toLowerCase() === 'insert',
                            'bg-blue-100 text-blue-800': op.toLowerCase() === 'update',
                            'bg-red-100 text-red-800': op.toLowerCase() === 'delete'
                          }"
                          x-text="op"></span>
                    <span class="font-medium text-gray-900" x-text="count"></span>
                  </div>
                </template>
              </div>
            </div>
          </template>
            </div>
          </div>
        </template>
      </div>

      <!-- Empty State -->
      <div x-show="!summaryData.tables_breakdown || summaryData.tables_breakdown.length === 0" class="text-center py-8">
        <div class="text-gray-500">
          <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <p class="text-lg font-medium">No Database Changes</p>
          <p class="text-sm">This session contains no tracked database operations.</p>
        </div>
      </div>
    </div>
  </template>
</div>
