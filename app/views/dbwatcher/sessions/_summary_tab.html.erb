<!-- Summary Tab -->
<div x-show="activeTab === 'summary'" class="p-4">
  <% if tables_summary.any? %>
    <div class="grid grid-cols-3 gap-3 mb-4">
      <% tables_summary.each do |table_name, summary| %>
        <% # Skip tables with no operations %>
        <% next if summary[:operations].empty? %>

        <div class="border border-gray-300 rounded p-3 hover:shadow-md cursor-pointer bg-white"
             @click="setActiveTab('changes'); scrollToTable('<%= table_name %>')">
          <h4 class="text-sm font-medium text-navy-dark mb-2"><%= table_name %></h4>
          <div class="space-y-1 text-xs">
            <% %w[INSERT UPDATE DELETE].each do |operation| %>
              <% # Only show operations with count > 0 %>
              <% count = summary[:operations][operation] %>
              <% next if count.nil? || count.zero? %>

              <div class="flex justify-between">
                <span class="badge badge-<%= operation.downcase %>"><%= operation %></span>
                <span class="font-medium"><%= count %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-8">
      <div class="text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <p class="text-lg font-medium">No Database Changes</p>
        <p class="text-sm">This session contains no tracked database operations.</p>
      </div>
    </div>
  <% end %>
</div>
