<%# Dashboard Overview Page %>
<div class="h-full flex flex-col">
  <!-- Compact Header -->
  <div class="h-10 bg-navy-dark text-white flex items-center px-4">
    <h1 class="text-sm font-medium">Dashboard</h1>
    <span class="ml-auto text-xs text-blue-light">
      <%= Time.current.strftime("%Y-%m-%d %H:%M:%S") %>
    </span>
  </div>

  <!-- Tab Bar -->
  <div class="tab-bar">
    <div class="tab-item active">Overview</div>
    <% if @system_info_summary && !@system_info_summary.empty? %>
      <%= link_to system_info_path, class: "tab-item" do %>
        System Info
      <% end %>
    <% end %>
  </div>

  <!-- Content Area -->
  <div class="flex-1 overflow-auto p-4">
    <!-- Overview Tab Content -->
    <div class="tab-content active" data-tab-content="overview">
      <!-- Compact Stats Grid -->
    <div class="grid grid-cols-4 gap-3 mb-4">
      <!-- Sessions Card -->
      <%= render 'dbwatcher/shared/stats_card',
          label: 'Active Sessions',
          value: @recent_sessions&.count || 0,
          description: 'Last 24 hours',
          icon_html: stats_icon(:sessions) %>

      <!-- Tables Card -->
      <%= render 'dbwatcher/shared/stats_card',
          label: 'Modified Tables',
          value: @active_tables&.count || 0,
          description: 'With changes',
          icon_html: stats_icon(:tables) %>

      <!-- Queries Card -->
      <%= render 'dbwatcher/shared/stats_card',
          label: 'SQL Queries',
          value: @query_stats&.dig(:total) || 0,
          description: 'Today',
          icon_html: stats_icon(:queries) %>

      <!-- Performance Card -->
      <% slow_queries = @query_stats&.dig(:slow_queries) || 0 %>
      <%= render 'dbwatcher/shared/stats_card',
          label: 'Slow Queries',
          value: slow_queries,
          value_class: (slow_queries > 0 ? 'text-red-600' : 'text-navy-dark'),
          description: '> 100ms',
          icon_html: stats_icon(:performance) %>
    </div>

    <!-- System Information Summary -->
    <% if @system_info_summary && !@system_info_summary.empty? %>
      <div class="grid grid-cols-4 gap-3 mb-4">
        <!-- System Load Card -->
        <%= render 'dbwatcher/shared/stats_card',
            label: 'System Load',
            value: @system_info_summary[:cpu_load] ? "#{@system_info_summary[:cpu_load]}" : 'N/A',
            description: '1min avg',
            icon_html: stats_icon(:system) %>

        <!-- Memory Usage Card -->
        <%= render 'dbwatcher/shared/stats_card',
            label: 'Memory Usage',
            value: @system_info_summary[:memory_usage] ? "#{@system_info_summary[:memory_usage]}%" : 'N/A',
            value_class: (@system_info_summary[:memory_usage] && @system_info_summary[:memory_usage] > 80) ? 'text-red-600' : 'text-navy-dark',
            description: 'of total',
            icon_html: stats_icon(:memory) %>

        <!-- DB Connections Card -->
        <%= render 'dbwatcher/shared/stats_card',
            label: 'DB Connections',
            value: @system_info_summary[:active_connections] || 'N/A',
            description: 'active',
            icon_html: stats_icon(:database) %>

        <!-- Runtime Info Card -->
        <%= render 'dbwatcher/shared/stats_card',
            label: 'Ruby/Rails',
            value: @system_info_summary[:ruby_version] || 'N/A',
            description: @system_info_summary[:rails_version] ? "Rails #{@system_info_summary[:rails_version]}" : 'Ruby only',
            icon_html: stats_icon(:runtime) %>
      </div>
    <% end %>

    <!-- Two Column Layout -->
    <div class="grid grid-cols-2 gap-4">
      <!-- Recent Sessions -->
      <div class="border border-gray-200 rounded-lg shadow-sm">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-4 py-3 border-b border-gray-200 rounded-t-lg">
          <div class="flex items-center">
            <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-sm font-semibold text-gray-800">Recent Sessions</h3>
          </div>
        </div>
        <div class="max-h-64 overflow-auto">
          <% if @recent_sessions&.any? %>
            <div class="divide-y divide-gray-100">
              <% @recent_sessions.each_with_index do |session, index| %>
                <div class="px-4 py-3 hover:bg-gray-50 transition-colors duration-150">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <% session_id = session[:id] || session['id'] %>
                      <% session_name = (session[:name] || session['name']).to_s.gsub(/^HTTP \w+ /, '') %>
                      <%= link_to session_path(session_id), class: "block" do %>
                        <div class="flex items-center">
                          <div class="h-2 w-2 bg-blue-400 rounded-full mr-3"></div>
                          <p class="text-sm font-medium text-gray-900 truncate" title="<%= session_name %>">
                            <%= session_name %>
                          </p>
                        </div>
                      <% end %>
                      <div class="flex items-center mt-1">
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          <%= session[:change_count] || session['change_count'] || 0 %> changes
                        </span>
                        <span class="ml-2 text-xs text-gray-500">
                          <% started_at = session[:started_at] || session['started_at'] %>
                          <%= Time.parse(started_at).strftime("%H:%M:%S") rescue 'N/A' %>
                        </span>
                      </div>
                    </div>
                    <div class="ml-4 flex-shrink-0">
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="p-8 text-center text-gray-500">
              <svg class="w-8 h-8 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-sm">No recent sessions</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Active Tables -->
      <div class="border border-gray-200 rounded-lg shadow-sm">
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-4 py-3 border-b border-gray-200 rounded-t-lg">
          <div class="flex items-center">
            <svg class="w-4 h-4 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h2a2 2 0 012 2v2H8V5z"/>
            </svg>
            <h3 class="text-sm font-semibold text-gray-800">Most Active Tables</h3>
          </div>
        </div>
        <div class="max-h-64 overflow-auto">
          <% if @active_tables&.any? %>
            <div class="divide-y divide-gray-100">
              <% @active_tables.first(10).each_with_index do |(table_name, count), index| %>
                <div class="px-4 py-3 hover:bg-gray-50 transition-colors duration-150">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <%= link_to table_path(table_name), class: "block" do %>
                        <div class="flex items-center">
                          <div class="h-2 w-2 bg-green-400 rounded-full mr-3"></div>
                          <p class="text-sm font-medium text-gray-900 truncate" title="<%= table_name %>">
                            <%= table_name %>
                          </p>
                        </div>
                      <% end %>
                      <div class="flex items-center mt-1">
                        <div class="flex gap-1">
                          <span class="badge badge-insert text-xs" title="Inserts">I</span>
                          <span class="badge badge-update text-xs" title="Updates">U</span>
                          <span class="badge badge-delete text-xs" title="Deletes">D</span>
                        </div>
                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          <%= count %> changes
                        </span>
                      </div>
                    </div>
                    <div class="ml-4 flex-shrink-0">
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="p-8 text-center text-gray-500">
              <svg class="w-8 h-8 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h2a2 2 0 012 2v2H8V5z"/>
              </svg>
              <p class="text-sm">No active tables</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Query Activity Section -->
    <div class="mt-6 border border-gray-200 rounded-lg shadow-sm">
      <div class="bg-gradient-to-r from-purple-50 to-indigo-50 px-4 py-3 border-b border-gray-200 rounded-t-lg">
        <div class="flex items-center">
          <svg class="w-4 h-4 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <h3 class="text-sm font-semibold text-gray-800">Query Activity</h3>
        </div>
      </div>
      <div class="p-6">
        <% if @query_stats&.dig(:by_operation)&.any? %>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% @query_stats[:by_operation].each do |operation, count| %>
              <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow duration-150">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-xs font-medium text-gray-600 uppercase tracking-wider"><%= operation %></span>
                  <div class="h-2 w-2 bg-<%= operation.downcase == 'select' ? 'blue' : operation.downcase == 'insert' ? 'green' : operation.downcase == 'update' ? 'yellow' : 'red' %>-400 rounded-full"></div>
                </div>
                <div class="text-2xl font-bold text-gray-900 mb-1"><%= count %></div>
                <div class="text-xs text-gray-500">
                  <%= operation.downcase == 'select' ? 'queries' : 'operations' %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-gray-500 py-8">
            <svg class="w-8 h-8 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <p class="text-sm">No query activity</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-6 border border-gray-200 rounded-lg shadow-sm">
      <div class="bg-gradient-to-r from-orange-50 to-red-50 px-4 py-3 border-b border-gray-200 rounded-t-lg">
        <div class="flex items-center">
          <svg class="w-4 h-4 text-orange-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <h3 class="text-sm font-semibold text-gray-800">Quick Actions</h3>
        </div>
      </div>
      <div class="p-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <%= link_to sessions_path, class: "group flex items-center justify-center px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg hover:bg-blue-100 transition-all duration-150 hover:shadow-md" do %>
            <div class="text-center">
              <svg class="w-5 h-5 text-blue-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div class="text-xs font-medium text-blue-900">View Sessions</div>
            </div>
          <% end %>
          
          <%= link_to tables_path, class: "group flex items-center justify-center px-4 py-3 bg-green-50 border border-green-200 rounded-lg hover:bg-green-100 transition-all duration-150 hover:shadow-md" do %>
            <div class="text-center">
              <svg class="w-5 h-5 text-green-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
              </svg>
              <div class="text-xs font-medium text-green-900">Browse Tables</div>
            </div>
          <% end %>
          
          <%= link_to queries_path, class: "group flex items-center justify-center px-4 py-3 bg-purple-50 border border-purple-200 rounded-lg hover:bg-purple-100 transition-all duration-150 hover:shadow-md" do %>
            <div class="text-center">
              <svg class="w-5 h-5 text-purple-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <div class="text-xs font-medium text-purple-900">SQL Logs</div>
            </div>
          <% end %>
          
          <% if @system_info_summary && !@system_info_summary.empty? %>
            <%= link_to system_info_path, class: "group flex items-center justify-center px-4 py-3 bg-orange-50 border border-orange-200 rounded-lg hover:bg-orange-100 transition-all duration-150 hover:shadow-md" do %>
              <div class="text-center">
                <svg class="w-5 h-5 text-orange-600 mx-auto mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="text-xs font-medium text-orange-900">System Info</div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
