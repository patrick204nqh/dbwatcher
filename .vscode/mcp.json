{
  "inputs": [
    {
      "type": "promptString",
      "id": "github-token",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ],
  "servers": {
    "github": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_TOKEN=${input:github-token}",
        "ghcr.io/github/github-mcp-server:latest"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "filesystem": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/workspaces/dbwatcher:/mnt/src",
        "mcp/filesystem",
        "--base-directory",
        "/mnt/src"
      ]
    },
    "fetch": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/fetch"]
    },
    "git": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/workspaces/dbwatcher:/mnt/src",
        "mcp/git",
        "--repository",
        "/mnt/src"
      ]
    },
    "memory": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/memory"]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "--rm", "-i", "mcp/sequentialthinking"]
    },
    "time": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "mcp/time"]
    }
  }
}
